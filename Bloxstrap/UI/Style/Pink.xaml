<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:base="clr-namespace:Bloxstrap.UI.Elements.Base">
    <SolidColorBrush x:Key="NewTextEditorBackground" Color="#59000000" />
    <SolidColorBrush x:Key="NewTextEditorForeground" Color="White" />
    <SolidColorBrush x:Key="NewTextEditorLink" Color="#3A9CEA" />
    <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#19000000" />
    <SolidColorBrush x:Key="NormalDarkAndLightBackground" Color="#0FFFFFFF" />
    <Color x:Key="ControlFillColorDefault">#19000000</Color>
    <LinearGradientBrush x:Key="ApplicationBackground" StartPoint="1,1" EndPoint="0,0">
        <GradientStop Offset="0.0" Color="#D66BA0" />
        <GradientStop Offset="0.5" Color="#B44E85" />
        <GradientStop Offset="1.0" Color="#732C4E" />
    </LinearGradientBrush>

    <Style x:Key="SquareProgressBarStyle" TargetType="ProgressBar" BasedOn="{StaticResource {x:Type ProgressBar}}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Grid Name="TemplateRoot" SnapsToDevicePixels="True">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="0" />

                        <Rectangle Name="PART_Track" />

                        <Border Name="PART_Indicator"
                            HorizontalAlignment="Left"
                            Background="{TemplateBinding Foreground}"
                            CornerRadius="0" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <Trigger Property="IsIndeterminate" Value="True">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ProgressBar">
                            <ControlTemplate.Resources>
                                <Storyboard x:Key="IndeterminateAnim" RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetName="PART_GlowRect"
                                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                                 From="-200" To="800" Duration="0:0:4" />
                                </Storyboard>
                            </ControlTemplate.Resources>

                            <Grid Name="TemplateRoot" ClipToBounds="True">
                                <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="0" />

                                <Grid Name="AnimationContainer" ClipToBounds="True">
                                    <Border Name="PART_GlowRect"
                                        Width="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}, TargetNullValue=100}"
                                        Height="{TemplateBinding Height}"
                                        HorizontalAlignment="Left"
                                        Background="{TemplateBinding Foreground}"
                                        CornerRadius="0">
                                        <Border.RenderTransform>
                                            <TranslateTransform X="-200" />
                                        </Border.RenderTransform>
                                    </Border>
                                </Grid>
                            </Grid>

                            <ControlTemplate.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard Storyboard="{StaticResource IndeterminateAnim}" />
                                </EventTrigger>
                            </ControlTemplate.Triggers>

                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>